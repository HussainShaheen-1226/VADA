# Admin session login
ADMIN_USER=admin
ADMIN_PASS=change-me

# Optional token for /refresh endpoint
ADMIN_TOKEN=some-long-random-token

# CORS (set your frontend origin, e.g., https://vada-frontend.onrender.com)
FRONTEND_ORIGIN=*

# Scrape cadence (ms)
SCRAPE_INTERVAL_MS=120000

# Web Push (generate with web-push: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=YOUR_PUBLIC_KEY
VAPID_PRIVATE_KEY=YOUR_PRIVATE_KEY
VAPID_SUBJECT=mailto:ops@example.com

# Port (Render will override)
PORT=10000

# Cookie/session secret
SESSION_SECRET=super-secret
